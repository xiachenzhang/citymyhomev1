        <title>@ViewBag.Title</title>
        <link href="https://fonts.googleapis.com/css?family=Courgette" rel="stylesheet">
    </head>
<body style="background-color:#90b4b4">
    <div id="menu" style="background-color:#61a1ab;z-index:9999">
        <div class="hamburger">
            <div class="line"></div>
            <div class="line"></div>
            <div class="line"></div>
        </div>
        <div class="menu-inner">

            <ul class="newstyle">
                <li class="newstyle">
                    <a class="link-3" href="~/Home/Home">Home</a>

@model IEnumerable<MelbourneMH.Models.Melbourne_Population>
@{
    Layout = null;
    ViewBag.Title = "Popmelpopulation";
}
    <head>
        <link href="~/Content/laynav.css" rel="stylesheet" />
        <link href="~/Content/narbarside.css" rel="stylesheet" />
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
